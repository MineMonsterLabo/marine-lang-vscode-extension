{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "marinescript",
	"patterns": [
		{"include": "#line_comment"},
		{"include": "#range_comment"},
		{"include": "#other_keyword"},
		{"include": "#control_keyword"},
		{"include": "#func_decl"},
		{"include": "#func_call"},
		{"include": "#bool"},
		{"include": "#string"},
		{"include": "#identifier"},
		{"include": "#number"}
	],
	"repository": {
		"line_comment":{
			"name": "comment.marinescript",
			"match": "//.*"
		},
		"range_comment":{
			"name": "comment.marinescript",
			"begin": "/\\*",
			"end": "\\*/"
		},
		"other_keyword": {
			"name": "keyword.other.marinescript",
			"match": "fun|end|\\sin"
		},
		"control_keyword":{
			"name": "keyword.control.marinescript",
			"match": "let|foreach|for|while|yield|if|else|ret|.await|null|new"
		},
		"func_decl":{
			"match": "(fun)\\s+([a-z_]+)",
			"captures": {
				"1": {"patterns": [{"include":"#keywords"}]},
				"2": {"patterns": [{"include":"#func_name"}]}
			}
		},
		"identifier":{
			"name": "variable.other.marinescript",
			"match": "[a-z][a-z_0-9]*"
		},
		"func_call":{
			"match": "([a-z]([a-z_]|[0-9])*)\\(",
			"captures": {
				"1": {"patterns": [{"include":"#func_name"}]}
			}
		},
		"func_name":{
			"name":"entity.name.function.marinescript",
			"match":"[a-z]([a-z_]|[0-9])+"
		},
		"number":{
			"name":"constant.numeric.marinescript",
			"match":"\\b[0-9]+\\b"
		},
		"bool":{
			"name":"keyword.other.marinescript",
			"match":"\\b(true|false)\\b"
		},
		"string":{
			"name":"string",
			"begin":"\"",
			"end":"\""
		}
	},
	"scopeName": "source.mrn"
}